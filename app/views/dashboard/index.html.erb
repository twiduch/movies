
<div class='mb-5'>
  <h2>Your active group</h2>
  <div id='user-active-group'>
    <%= render partial: 'groups/group', object: current_user.active_group %>
  </div>
</div>

<%= form_tag(dashboard_index_path, method: :get, class: 'max-w-md mt-5') do %>
  <%= label_tag('movie-search', 'Search', class: 'mb-2 text-sm font-medium text-gray-900 sr-only') %>
  <div class="relative">
    <div class="absolute w-10 h-10 inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
        <%= svg 'loupe' %>
    </div>
    <%= search_field_tag('search', nil,
      class: 'block w-full p-4 pl-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500',
      placeholder: 'Search movie title',
      value:params[:search],
      required: true
    ) %>
    <%= button_tag('Search',
      class: 'text-white absolute right-2.5 bottom-2.5 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2'
    ) %>
  </div>
<% end %>

<div id="search-movie-list" class="min-w-full">
  <%= render partial: 'movies/search_movie', collection: @search_movie %>
</div>
